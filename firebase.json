{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "public": "dist",
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "ignore": [
            "build",
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "functions",
            "gulpfile.js"
        ]
    }
}
